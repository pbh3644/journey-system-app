<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbh.journey.system.app.mapper.SysRoleMapper">
    <resultMap type="com.pbh.journey.system.pojo.domain.SysRole" id="sysRoleResultMap">
        <result property="id" column="ID"/>
        <result property="roleName" column="ROLE_NAME"/>
        <result property="roleCode" column="ROLE_CODE"/>
        <result property="roleDesc" column="ROLE_DESC"/>
        <result property="systemCode" column="SYSTEM_CODE"/>
        <result property="roleState" column="ROLE_STATE"/>
        <result property="addTime" column="ADD_TIME"/>
        <result property="updateTime" column="UPDATE_TIME"/>
        <result property="deleteTime" column="DELETE_TIME"/>
        <result property="addUserId" column="ADD_USER_ID"/>
        <result property="updateUserId" column="UPDATE_USER_ID"/>
        <result property="deleteUserId" column="DELETE_USER_ID"/>
        <result property="deleteFlag" column="DELETE_FLAG"/>
        <result property="remark" column="REMARK"/>
    </resultMap>

    <sql id="table_columns">
            ID,
            ROLE_NAME,
            ROLE_CODE,
            ROLE_DESC,
            SYSTEM_CODE,
            ROLE_STATE,
            ADD_TIME,
            UPDATE_TIME,
            DELETE_TIME,
            ADD_USER_ID,
            UPDATE_USER_ID,
            DELETE_USER_ID,
            DELETE_FLAG,
            REMARK
    </sql>
    <sql id="entity_properties">
            #{id},
            #{roleName},
            #{roleCode},
            #{roleDesc},
            #{systemCode},
            #{roleState},
            #{addTime},
            #{updateTime},
            #{deleteTime},
            #{addUserId},
            #{updateUserId},
            #{deleteUserId},
            #{deleteFlag},
            #{remark}
    </sql>

    <!-- 使用like用法：columnName like concat('%',#{columnName},'%') -->
    <sql id="page_where">
        <trim prefix="where" prefixOverrides="and | or ">
            <if test="id != null and id != 0">and ID = #{id}</if>
            <if test="roleName != null and roleName != ''">and ROLE_NAME = #{roleName}</if>
            <if test="roleCode != null and roleCode != ''">and ROLE_CODE = #{roleCode}</if>
            <if test="roleDesc != null and roleDesc != ''">and ROLE_DESC = #{roleDesc}</if>
            <if test="systemCode != null and systemCode != ''">and SYSTEM_CODE = #{systemCode}</if>
            <if test="roleState != null">and ROLE_STATE = #{roleState}</if>
            <if test="addTime != null">and ADD_TIME = #{addTime}</if>
            <if test="updateTime != null">and UPDATE_TIME = #{updateTime}</if>
            <if test="deleteTime != null">and DELETE_TIME = #{deleteTime}</if>
            <if test="addUserId != null and addUserId != 0">and ADD_USER_ID = #{addUserId}</if>
            <if test="updateUserId != null and updateUserId != 0">and UPDATE_USER_ID = #{updateUserId}</if>
            <if test="deleteUserId != null and deleteUserId != 0">and DELETE_USER_ID = #{deleteUserId}</if>
            <if test="deleteFlag != null">and DELETE_FLAG = #{deleteFlag}</if>
            <if test="remark != null and remark != ''">and REMARK = #{remark}</if>
        </trim>
    </sql>

    <insert id="insert" parameterType="com.pbh.journey.system.pojo.domain.SysRole">
        insert into sys_role(
        <include refid="table_columns"/>
        )
        values (
        <include refid="entity_properties"/>
        )
    </insert>

    <insert id="insertBatch" parameterType="java.util.List">
        insert into sys_role(
        <include refid="table_columns"/>
        )
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.id},
            #{item.roleName},
            #{item.roleCode},
            #{item.roleDesc},
            #{item.systemCode},
            #{item.roleState},
            #{item.addTime},
            #{item.updateTime},
            #{item.deleteTime},
            #{item.addUserId},
            #{item.updateUserId},
            #{item.deleteUserId},
            #{item.deleteFlag},
            #{item.remark}
            )
        </foreach>
    </insert>

    <delete id="delete" parameterType="java.lang.Long">
        delete from sys_role
        where id = #{id}
    </delete>

    <update id="deleteBatch">
        update sys_role set DELETE_FLAG = 2,DELETE_TIME = NOW()
        where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <update id="deleteLogic" parameterType="java.lang.Long">
        update sys_role set DELETE_FLAG = 2,DELETE_TIME = NOW()
        where id = #{id}
    </update>

    <update id="update" parameterType="com.pbh.journey.system.pojo.domain.SysRole">
        update sys_role
        <trim prefix="set" suffixOverrides=",">
            <if test="roleName != null and roleName != ''">ROLE_NAME = #{roleName},</if>
            <if test="roleCode != null and roleCode != ''">ROLE_CODE = #{roleCode},</if>
            <if test="roleDesc != null and roleDesc != ''">ROLE_DESC = #{roleDesc},</if>
            <if test="systemCode != null and systemCode != ''">SYSTEM_CODE = #{systemCode},</if>
            <if test="roleState != null">and ROLE_STATE = #{roleState},</if>
            <if test="addTime != null">and ADD_TIME = #{addTime},</if>
            <if test="updateTime != null">and UPDATE_TIME = #{updateTime},</if>
            <if test="deleteTime != null">and DELETE_TIME = #{deleteTime},</if>
            <if test="addUserId != null and addUserId != 0">ADD_USER_ID = #{addUserId},</if>
            <if test="updateUserId != null and updateUserId != 0">UPDATE_USER_ID = #{updateUserId},</if>
            <if test="deleteUserId != null and deleteUserId != 0">DELETE_USER_ID = #{deleteUserId},</if>
            <if test="deleteFlag != null">and DELETE_FLAG = #{deleteFlag},</if>
            <if test="remark != null and remark != ''">REMARK = #{remark},</if>
        </trim>
        <where>id = #{id}</where>
    </update>

    <update id="updateBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=",">
            update sys_role
            <trim prefix="set" suffixOverrides=",">
                <if test="item.roleName != null and item.roleName != ''">ROLE_NAME = #
                    {item.roleName},
                </if>
                <if test="item.roleCode != null and item.roleCode != ''">ROLE_CODE = #
                    {item.roleCode},
                </if>
                <if test="item.roleDesc != null and item.roleDesc != ''">ROLE_DESC = #
                    {item.roleDesc},
                </if>
                <if test="item.systemCode != null and item.systemCode != ''">SYSTEM_CODE = #
                    {item.systemCode},
                </if>
                <if test="item.roleState != null">ROLE_STATE = #{item.roleState},</if>
                <if test="item.addTime != null">ADD_TIME = #{item.addTime},</if>
                <if test="item.updateTime != null">UPDATE_TIME = #{item.updateTime},</if>
                <if test="item.deleteTime != null">DELETE_TIME = #{item.deleteTime},</if>
                <if test="item.addUserId != null and item.addUserId != 0">ADD_USER_ID = #
                    {item.addUserId},
                </if>
                <if test="item.updateUserId != null and item.updateUserId != 0">UPDATE_USER_ID = #
                    {item.updateUserId},
                </if>
                <if test="item.deleteUserId != null and item.deleteUserId != 0">DELETE_USER_ID = #
                    {item.deleteUserId},
                </if>
                <if test="item.deleteFlag != null">DELETE_FLAG = #{item.deleteFlag},</if>
                <if test="item.remark != null and item.remark != ''">REMARK = #
                    {item.remark},
                </if>
            </trim>
            <where>id = #{item.id}</where>
        </foreach>
    </update>

    <select id="findAll" resultMap="sysRoleResultMap">
        select
        <include refid="table_columns"/>
        from sys_role
    </select>

    <select id="findList" resultMap="sysRoleResultMap">
        select
        <include refid="table_columns"/>
        from sys_role
        <include refid="page_where"/>
    </select>

    <select id="getCount" resultType="int">
        select count(id) from sys_role
        <include refid="page_where"/>
    </select>


    <select id="get" resultMap="sysRoleResultMap" parameterType="java.lang.Long">
        select
        <include refid="table_columns"/>
        from sys_role
        where id = #{id} and DELETE_FLAG = 1
    </select>

    <!-- 其他自定义SQL -->

    <!-- 根据角色名称查询角色 -->
    <select id="nameGetRole" resultMap="sysRoleResultMap" parameterType="java.lang.String">
        select
        <include refid="table_columns"/>
        from sys_role r where r.role_name = #{roleName}
    </select>

    <!--禁用启用角色状态-->
    <update id="switchRole" parameterType="com.pbh.journey.system.pojo.domain.SysRole">
        update sys_role r set r.role_state = #{roleState} where r.id = #{id}
    </update>
</mapper>
