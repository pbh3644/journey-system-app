<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pbh.journey.system.app.mapper.SysDeptPermissionMapper">
    <resultMap type="com.pbh.journey.system.pojo.domain.SysDeptPermission" id="sysDeptPermissionResultMap">
        <result property="id" column="ID"/>
        <result property="deptId" column="DEPT_ID"/>
        <result property="permissionId" column="PERMISSION_ID"/>
        <result property="addTime" column="ADD_TIME"/>
        <result property="updateTime" column="UPDATE_TIME"/>
        <result property="deleteTime" column="DELETE_TIME"/>
        <result property="addUserId" column="ADD_USER_ID"/>
        <result property="updateUserId" column="UPDATE_USER_ID"/>
        <result property="deleteUserId" column="DELETE_USER_ID"/>
        <result property="deleteFlag" column="DELETE_FLAG"/>
        <result property="remark" column="REMARK"/>
    </resultMap>

    <sql id="table_columns">
            ID,
            DEPT_ID,
            PERMISSION_ID,
            ADD_TIME,
            UPDATE_TIME,
            DELETE_TIME,
            ADD_USER_ID,
            UPDATE_USER_ID,
            DELETE_USER_ID,
            DELETE_FLAG,
            REMARK
    </sql>
    <sql id="entity_properties">
            #{id},
            #{deptId},
            #{permissionId},
            #{addTime},
            #{updateTime},
            #{deleteTime},
            #{addUserId},
            #{updateUserId},
            #{deleteUserId},
            #{deleteFlag},
            #{remark}
    </sql>

    <!-- 使用like用法：columnName like concat('%',#{columnName},'%') -->
    <sql id="page_where">
        <trim prefix="where" prefixOverrides="and | or ">
            <if test="id != null and id != 0">and ID = #{id}</if>
            <if test="deptId != null and deptId != 0">and DEPT_ID = #{deptId}</if>
            <if test="permissionId != null and permissionId != 0">and PERMISSION_ID = #{permissionId}</if>
            <if test="addTime != null">and ADD_TIME = #{addTime}</if>
            <if test="updateTime != null">and UPDATE_TIME = #{updateTime}</if>
            <if test="deleteTime != null">and DELETE_TIME = #{deleteTime}</if>
            <if test="addUserId != null and addUserId != 0">and ADD_USER_ID = #{addUserId}</if>
            <if test="updateUserId != null and updateUserId != 0">and UPDATE_USER_ID = #{updateUserId}</if>
            <if test="deleteUserId != null and deleteUserId != 0">and DELETE_USER_ID = #{deleteUserId}</if>
            <if test="deleteFlag != null">and DELETE_FLAG = #{deleteFlag}</if>
            <if test="remark != null and remark != ''">and REMARK = #{remark}</if>
        </trim>
    </sql>

    <insert id="insert" parameterType="com.pbh.journey.system.pojo.domain.SysDeptPermission">
        insert into sys_dept_permission(
        <include refid="table_columns"/>
        )
        values (
        <include refid="entity_properties"/>
        )
    </insert>

    <insert id="insertBatch" parameterType="java.util.List">
        insert into sys_dept_permission(
        <include refid="table_columns"/>
        )
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.id},
            #{item.deptId},
            #{item.permissionId},
            #{item.addTime},
            #{item.updateTime},
            #{item.deleteTime},
            #{item.addUserId},
            #{item.updateUserId},
            #{item.deleteUserId},
            #{item.deleteFlag},
            #{item.remark}
            )
        </foreach>
    </insert>

    <delete id="delete" parameterType="java.lang.Long">
        delete from sys_dept_permission
        where id = #{id}
    </delete>

    <update id="deleteBatch">
        update sys_dept_permission set DELETE_FLAG = 2,DELETE_TIME = NOW()
        where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <update id="deleteLogic" parameterType="java.lang.Long">
        update sys_dept_permission set DELETE_FLAG = 2,DELETE_TIME = NOW()
        where id = #{id}
    </update>

    <update id="update" parameterType="com.pbh.journey.system.pojo.domain.SysDeptPermission">
        update sys_dept_permission
        <trim prefix="set" suffixOverrides=",">
            <if test="deptId != null and deptId != 0">DEPT_ID = #{deptId},</if>
            <if test="permissionId != null and permissionId != 0">PERMISSION_ID = #{permissionId},</if>
            <if test="addTime != null">and ADD_TIME = #{addTime},</if>
            <if test="updateTime != null">and UPDATE_TIME = #{updateTime},</if>
            <if test="deleteTime != null">and DELETE_TIME = #{deleteTime},</if>
            <if test="addUserId != null and addUserId != 0">ADD_USER_ID = #{addUserId},</if>
            <if test="updateUserId != null and updateUserId != 0">UPDATE_USER_ID = #{updateUserId},</if>
            <if test="deleteUserId != null and deleteUserId != 0">DELETE_USER_ID = #{deleteUserId},</if>
            <if test="deleteFlag != null">and DELETE_FLAG = #{deleteFlag},</if>
            <if test="remark != null and remark != ''">REMARK = #{remark},</if>
        </trim>
        <where>id = #{id}</where>
    </update>

    <update id="updateBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" separator=",">
            update sys_dept_permission
            <trim prefix="set" suffixOverrides=",">
                <if test="item.deptId != null and item.deptId != 0">DEPT_ID = #
                    {item.deptId},
                </if>
                <if test="item.permissionId != null and item.permissionId != 0">PERMISSION_ID = #
                    {item.permissionId},
                </if>
                <if test="item.addTime != null">ADD_TIME = #{item.addTime},</if>
                <if test="item.updateTime != null">UPDATE_TIME = #{item.updateTime},</if>
                <if test="item.deleteTime != null">DELETE_TIME = #{item.deleteTime},</if>
                <if test="item.addUserId != null and item.addUserId != 0">ADD_USER_ID = #
                    {item.addUserId},
                </if>
                <if test="item.updateUserId != null and item.updateUserId != 0">UPDATE_USER_ID = #
                    {item.updateUserId},
                </if>
                <if test="item.deleteUserId != null and item.deleteUserId != 0">DELETE_USER_ID = #
                    {item.deleteUserId},
                </if>
                <if test="item.deleteFlag != null">DELETE_FLAG = #{item.deleteFlag},</if>
                <if test="item.remark != null and item.remark != ''">REMARK = #
                    {item.remark},
                </if>
            </trim>
            <where>id = #{item.id}</where>
        </foreach>
    </update>

    <select id="findAll" resultMap="sysDeptPermissionResultMap">
        select
        <include refid="table_columns"/>
        from sys_dept_permission
    </select>

    <select id="findList" resultMap="sysDeptPermissionResultMap">
        select
        <include refid="table_columns"/>
        from sys_dept_permission
        <include refid="page_where"/>
    </select>

    <select id="getCount" resultType="int">
        select count(id) from sys_dept_permission
        <include refid="page_where"/>
    </select>


    <select id="get" resultMap="sysDeptPermissionResultMap" parameterType="java.lang.Long">
        select
        <include refid="table_columns"/>
        from sys_dept_permission
        where id = #{id} and DELETE_FLAG = 1
    </select>

    <!-- 其他自定义SQL -->

    <!--权限对象映射-->
    <resultMap type="com.pbh.journey.system.pojo.domain.SysPermission" id="sysPermissionResultMap">
        <result property="id" column="ID"/>
        <result property="parentId" column="PARENT_ID"/>
        <result property="isMenu" column="IS_MENU"/>
        <result property="level" column="LEVEL"/>
        <result property="permissionUrl" column="PERMISSION_URL"/>
        <result property="permissionDesc" column="PERMISSION_DESC"/>
        <result property="systemCode" column="SYSTEM_CODE"/>
        <result property="needCsrf" column="NEED_CSRF"/>
        <result property="order" column="ORDER"/>
        <result property="permissionType" column="PERMISSION_TYPE"/>
        <result property="addTime" column="ADD_TIME"/>
        <result property="updateTime" column="UPDATE_TIME"/>
        <result property="deleteTime" column="DELETE_TIME"/>
        <result property="addUserId" column="ADD_USER_ID"/>
        <result property="updateUserId" column="UPDATE_USER_ID"/>
        <result property="deleteUserId" column="DELETE_USER_ID"/>
        <result property="deleteFlag" column="DELETE_FLAG"/>
        <result property="remark" column="REMARK"/>
    </resultMap>

    <!--权限表字段-->
    <sql id="permission_table_columns">
            P.ID,
            P.PARENT_ID,
            P.IS_MENU,
            P.LEVEL,
            P.PERMISSION_URL,
            P.PERMISSION_DESC,
            P.SYSTEM_CODE,
            P.NEED_CSRF,
            P.ORDER,
            P.PERMISSION_TYPE,
            P.ADD_TIME,
            P.UPDATE_TIME,
            P.DELETE_TIME,
            P.ADD_USER_ID,
            P.UPDATE_USER_ID,
            P.DELETE_USER_ID,
            P.DELETE_FLAG,
            P.REMARK
    </sql>

    <!--查看部门拥有的权限-->
    <select id="deptOfPermission" resultMap="sysPermissionResultMap" parameterType="java.lang.Long">
        SELECT
        <include refid="permission_table_columns"/>
        FROM SYS_DEPT_PERMISSION DP
        LEFT JOIN SYS_PERMISSION P ON DP.PERMISSION_ID = P.ID
        WHERE DP.DEPT_ID = #{DEPTID}
        ORDER BY P.LEVEL,P.ORDER
    </select>
</mapper>
